<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <strong>Merchant:</strong>
    <%= link_to product.merchant.name, product.merchant %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category.name %>
  </p>

</div>
